@{
    ViewBag.Title = "Quản lý file CKFinder";
    Layout = "_AdminLayout";
}

<div class="box_header">
    <h2>@ViewBag.Title</h2>
    <div class="list-group list-group-horizontal">
        <a class="btn quick-link mr-2" asp-action="Index" asp-controller="Vcms"><i class="fal fa-home mr-2"></i>Về trang chính</a>
    </div>
</div>
<div class="box_content">
