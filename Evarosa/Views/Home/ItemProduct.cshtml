@model Product

<div class="product-item">
    <a class="avatar" asp-controller="Home" asp-action="ProductDetails" asp-route-url="@Model.Url">
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <img src="@PathSystem.Combine("/contents/products/", Model.Avatar)" alt="@Model.Avatar" />
        }
        else
        {
            <img src="~/images/no-image.jpg" alt="no-image" />
        }
    </a>
    <div class="body">
        <a class="name" asp-controller="Home" asp-action="ProductDetails" asp-route-url="@Model.Url">
            <h3>@Model.Name</h3>
        </a>
        <div class="row">
            <div class="col-6">
                <span class="masp">Mã: @Model.MaSP</span>
            </div>
            <div class="col-6">
                <span class="price">
                    @if (Model.FinalPrice > 0)
                    {
                        @Html.DisplayFor(m => m.FinalPrice)
                    } else
                    {
                        @:Liên hệ    
                    }
                </span>
            </div>
        </div>
    </div>
</div>