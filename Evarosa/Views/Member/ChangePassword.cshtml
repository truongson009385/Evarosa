@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container my-5">
    <div class="member-wrapper">
        @await Component.InvokeAsync("Member")
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <partial name="_resultmessage" model="ViewBag.Message" />
        }
        <h3 class="member-title">Đổi mật khẩu</h3>
        <form asp-action="ChangePassword" method="post" class="member-form">
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.EditorFor(m => m.OldPassword)
            </div>
            <div class="form-group">
                @Html.EditorFor(m => m.Password)
            </div>
            <div class="form-group">
                @Html.EditorFor(m => m.ConfirmPassword)
            </div>
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
