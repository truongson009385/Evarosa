@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4 mx-auto">
            <div class="member-wrapper">
                <form class="member-form" asp-action="ResetPasswordStore" method="post">
                    <h1 class="form-title text-center mb-2">@ViewData["Title"]</h1>
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.Code)
                    <div class="form-group">
                        @Html.EditorFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(m => m.Password)
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(m => m.ConfirmPassword)
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">Gửi</button>
                    <p class="form-text text-center mb-0 mt-3">Bạn đã có tài khoản? <a asp-controller="Member" asp-action="Login">Đăng nhập ngay.</a></p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
