@model MemberLogin

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-4 mx-auto">
            <div class="member-wrapper">
                <form class="member-form" asp-action="Login" method="post">
                    <h1 class="form-title text-center mb-2">@ViewData["Title"]</h1>
                    <p class="form-text text-center mb-4">Vui lòng nhập thông tin của bạn để đăng nhập</p>
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <partial name="_resultmessage" model="ViewBag.Message" />
                    }
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.EditorFor(m => m.Email)
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(m => m.Password)
                    </div>
                    <p class="form-text text-right mb-0 my-3"><a asp-controller="Member" asp-action="ForgotPassword">Quên mật khẩu?</a></p>
                    <button type="submit" class="btn btn-block btn-primary">Đăng nhập</button>
                    <p class="form-text text-center mb-0 mt-3">Bạn chưa có tài khoản? <a asp-controller="Member" asp-action="Register">Đăng ký ngay.</a></p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
